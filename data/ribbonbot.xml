<Robot name="needlebot">
<KinBody>
	<Body name="needlelink" type="dynamic">
		<Translation>0 0 0</Translation>
		<!--rotation of the body specified as a rotation axis.
		First three numbers are the axis.-->
		<Mass type="mimicgeom">
		  <density>1</density>
		</Mass> 

		<Geom type="cylinder">
			<radius>.05</radius>
			<height>0.3</height>
			<Translation> 0 0 -0.25 </Translation>
			<rotationaxis>0 1 0 90</rotationaxis>
		</Geom>

		<Geom type="cylinder">
			<radius>.05</radius>
			<height>0.3</height>
			<Translation> 0 0 0.25 </Translation>
			<rotationaxis>0 1 0 90</rotationaxis>
		</Geom>
		
		<Geom type="box">
			<Extents> 0.05 0.15 0.25 </Extents>
			<Translation> 0 0 0 </Translation>
		</Geom>
 	</Body>
</KinBody>
</Robot>
